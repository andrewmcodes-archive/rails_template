<div class="relative bg-indigo-900 md:pt-32 pb-32 pt-12 px-4 md:px-10 mx-auto">
  <h1 class="font-semibold text-4xl text-gray-100 my-8">Editing Post</h1>
</div>
<div class="px-4 md:px-10 mx-auto w-full mt-12">
  <%= render "form", post: @post %>
  <%= link_to "Show", @post, class: "bg-transparent hover:bg-indigo-900 text-indigo-700 font-semibold hover:text-white py-2 px-4 border border-indigo-900 hover:border-transparent rounded" %> |
  <%= link_to "Back", posts_path, class: "bg-transparent hover:bg-indigo-900 text-indigo-700 font-semibold hover:text-white py-2 px-4 border border-indigo-900 hover:border-transparent rounded" %>
</div>
